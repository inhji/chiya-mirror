<section class="max-w-2xl mx-auto">
  <.header>
    <%= @channel.name %>
    <:subtitle><%= Markdown.render(@channel.content) |> raw %></:subtitle>
  </.header>

  <div class="w-full mt-6 sm:w-auto flex flex-col gap-1.5">
    <.note_list notes={@channel.notes} layout={@channel.layout} />
  </div>
</section>
